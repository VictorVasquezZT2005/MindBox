<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mindbox.app.MindGraphView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi Red Digital"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#1A1A1A"/>

            <TextView
                android:id="@+id/tvTotalSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#99F2F2F7"
                android:padding="15dp"
                android:text="Cargando informaciÃ³n..."
                android:textAlignment="center"
                android:textColor="#444444"
                android:elevation="0dp"/>

            <include android:id="@+id/statNotes" 
                layout="@layout/item_stat_row" 
                android:layout_marginTop="20dp" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"/>

            <include android:id="@+id/statCerts" 
                layout="@layout/item_stat_row" 
                android:layout_marginTop="12dp" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"/>

            <include android:id="@+id/statPasswords" 
                layout="@layout/item_stat_row" 
                android:layout_marginTop="12dp" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"/>

            <include android:id="@+id/statReminders" 
                layout="@layout/item_stat_row" 
                android:layout_marginTop="12dp" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
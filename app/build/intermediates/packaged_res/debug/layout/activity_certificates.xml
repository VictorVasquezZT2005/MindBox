<?xml version="1.0" encoding="utf-8" ?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
    >

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_back_ios_24"
            app:tint="#FFFFFF"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Logros"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
        />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_rounded_full"
            android:backgroundTint="#1C1C1E"
            android:hint="Buscar certificado..."
            android:paddingHorizontal="20dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#4B5563"
            android:textSize="15sp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="12dp"
            android:drawableTint="#4B5563"
        />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none"
        >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp"
            >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnFilterAll"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="Todas"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/edit_text_rounded_full"
                    android:backgroundTint="#1e94f6"
                    android:textAllCaps="false"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="8dp"
                />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnFilterCredly"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="Credly"
                    android:textColor="#666666"
                    android:background="@drawable/edit_text_rounded_full"
                    android:backgroundTint="#1C1C1E"
                    android:textAllCaps="false"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="8dp"
                />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnFilterUdemy"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="Udemy"
                    android:textColor="#666666"
                    android:background="@drawable/edit_text_rounded_full"
                    android:backgroundTint="#1C1C1E"
                    android:textAllCaps="false"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="8dp"
                />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnFilterSlim"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="Carlos Slim"
                    android:textColor="#666666"
                    android:background="@drawable/edit_text_rounded_full"
                    android:backgroundTint="#1C1C1E"
                    android:textAllCaps="false"
                    android:paddingHorizontal="16dp"
                />

            </LinearLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCertificates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:paddingBottom="100dp"
            tools:listitem="@layout/item_certificate"
        />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddCertificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/add_24"
        app:backgroundTint="#1e94f6"
        app:tint="#FFFFFF"
        app:elevation="6dp"
    />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

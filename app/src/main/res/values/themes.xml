<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="Theme.MindBox" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pitch_black</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/brand_primary</item>
        <item name="android:windowBackground">@color/pitch_black</item>
        <item name="android:textColorPrimary">
#FFFFFF</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
    </style>
    <style
        name="Theme.MindBox.DocumentScanner"
        parent="Theme.MaterialComponents.DayNight.NoActionBar"
    >
        <item name="colorPrimary">@color/mindbox_primary</item>
        <item name="colorPrimaryDark">
#000000</item>
        <item name="colorAccent">@color/mindbox_primary</item>
        <item name="android:windowBackground">@color/mindbox_bg</item>
        <item name="android:textColorPrimary">
#FFFFFF</item>
        <item name="colorSurface">@color/mindbox_surface</item>
        <item name="colorOnSurface">
#FFFFFF</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/surface_dark</item>
        <item name="android:textColorPrimary">
#FFFFFF</item>
        <item name="android:textColorSecondary">@color/text_muted</item>
        <item name="colorAccent">@color/brand_primary</item>
    </style>
</resources>

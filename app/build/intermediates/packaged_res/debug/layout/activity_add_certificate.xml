<?xml version="1.0" encoding="utf-8" ?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101a22"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingHorizontal="16dp"
        >
            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/close_24"
                app:tint="#94a3b8"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Registrar Logro"
                android:textColor="#f1f5f9"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
            />
            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/check_24"
                app:tint="#1e94f6"
            />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plataforma / Emisor"
                    android:textColor="#64748b"
                    android:textSize="13sp"
                    android:layout_marginBottom="12dp"
                    android:textAllCaps="true"
                />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="16dp"
                >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                    >
                        <Button
                            android:id="@+id/btnPlatformSlim"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Carlos Slim"
                            android:textAllCaps="false"
                            android:background="@drawable/edit_text_outline"
                            android:layout_marginEnd="8dp"
                        />
                        <Button
                            android:id="@+id/btnPlatformCredly"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Credly"
                            android:textAllCaps="false"
                            android:background="@drawable/edit_text_outline"
                            android:layout_marginEnd="8dp"
                        />
                        <Button
                            android:id="@+id/btnPlatformOther"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Otro"
                            android:textAllCaps="false"
                            android:background="@drawable/edit_text_outline"
                        />
                    </LinearLayout>
                </HorizontalScrollView>

                <EditText
                    android:id="@+id/etCustomPlatform"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_outline"
                    android:hint="Nombre de la empresa"
                    android:paddingHorizontal="16dp"
                    android:textColor="#f1f5f9"
                    android:textColorHint="#334155"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TÃ­tulo del curso"
                    android:textColor="#64748b"
                    android:layout_marginBottom="8dp"
                />
                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_outline"
                    android:hint="Ej. Desarrollo Android"
                    android:paddingHorizontal="16dp"
                    android:textColor="#f1f5f9"
                    android:textColorHint="#334155"
                    android:layout_marginBottom="20dp"
                />

                <TextView
                    android:id="@+id/tvFolioLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Folio de Certificado"
                    android:textColor="#64748b"
                    android:layout_marginBottom="8dp"
                />
                <EditText
                    android:id="@+id/etFolio"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_outline"
                    android:hint="ID-0000-X"
                    android:paddingHorizontal="16dp"
                    android:textColor="#f1f5f9"
                    android:textColorHint="#334155"
                    android:layout_marginBottom="20dp"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de entrega"
                    android:textColor="#64748b"
                    android:layout_marginBottom="8dp"
                />
                <RelativeLayout
                    android:id="@+id/btnSelectDate"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_outline"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="20dp"
                >
                    <TextView
                        android:id="@+id/tvSelectedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Seleccionar fecha"
                        android:textColor="#94a3b8"
                    />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/calendar_today_24"
                        app:tint="#1e94f6"
                    />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Archivo de respaldo"
                    android:textColor="#64748b"
                    android:layout_marginBottom="8dp"
                />
                <LinearLayout
                    android:id="@+id/btnSelectPdf"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/pdf_dash_outline"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                >
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/picture_as_pdf_24"
                        app:tint="#1e94f6"
                    />
                    <TextView
                        android:id="@+id/tvPdfName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seleccionar archivo PDF"
                        android:textColor="#cbd5e1"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                    />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notas adicionales"
                    android:textColor="#64748b"
                    android:layout_marginBottom="8dp"
                />
                <EditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:gravity="top"
                    android:background="@drawable/edit_text_outline"
                    android:padding="16dp"
                    android:textColor="#f1f5f9"
                    android:hint="..."
                    android:textColorHint="#334155"
                    android:layout_marginBottom="40dp"
                />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
